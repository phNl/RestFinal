{% extends 'base.html.twig' %}

{% block title %}Dish index{% endblock %}

{% block body %}
    <h1>Dish index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Price</th>
                <th>Weight</th>
                <th>Photo</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for dish in dishes %}
            <tr>
                <td>{{ dish.id }}</td>
                <td>{{ dish.name }}</td>
                <td>{{ dish.price }}</td>
                <td>{{ dish.weight }}</td>
                <td>{{ dish.photo }}</td>
                <td>
                    <a href="{{ path('app_dish_menu_edit_show', {'id': dish.id}) }}">show</a>
                    <a href="{{ path('app_dish_menu_edit_edit', {'id': dish.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_dish_menu_edit_new') }}">Create new</a>
{% endblock %}
